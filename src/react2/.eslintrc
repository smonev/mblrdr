# http://eslint.org/docs/configuring/
---
ecmaFeatures:
  "blockBindings": true,
  "forOf": true,
  "jsx": true

settings:
  jsx: true
  ecmascript: 6

env:
  browser: true
  node: true

globals:
  __DEV__: true,
  $: true
  Velocity: true
  Hammer: true
  appear: true,
  describe: true,
  it: true

rules:
  # ERRORS
  brace-style: 2
  space-after-keywords: 2
  strict: 2
  no-comma-dangle: 2
  no-unused-expressions: 2
  block-scoped-var: 2
  eol-last: 2
  dot-notation: 2
  consistent-return: 2
  indent: [4]

  # WARNINGS
  quotes: [1, 'single']
  no-alert: 0

  # This is the only one that's hard to track since we don't lint just changes.
  max-len: [1, 180]

  # DISABLED. These currently cause errors when running.
  no-multi-spaces: 0
